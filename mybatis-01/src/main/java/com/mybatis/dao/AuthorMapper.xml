<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="AuthorMapper">
  	<insert id="insertAuthor" parameterType="com.mybatis.pojo.Author" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
  		insert into author(name,dynasty,birth,brief_description) values(#{name},#{dynasty},#{birth},#{briefDescription})
  		
  	</insert>
  	
  
  	
  
  </mapper>